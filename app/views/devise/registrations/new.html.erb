<div id="registrations_new" class="flex flex-col mx-auto px-20 w-[850px] h-[700px]">
  <h2 class="block font-bold text-2xl tracking-tight py-6">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-red-200 grid grid-cols-2 grid-rows-5 w-full p-5 gap-5 items-end grow rounded-lg drop-shadow-2xl" }) do |f| %>
    
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Johnny", class: "w-full devise_input_field" %>
    </div>
    
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true, placeholder: "Silverhand", class: "w-full devise_input_field" %>
    </div>

    <div class="field col-span-2">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "johnny.silverhand@arakasa.corp", class: "w-full devise_input_field" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class="block text-xl">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: " ", class: "w-full devise_input_field focus:devise_input_field"  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " ", class: "w-full devise_input_field"  %>
    </div>

    <div class="col-span-2">
        <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="actions col-span-2 self-center">
      <%= f.submit "Sign up", class: "bg-red-500 rounded-full w-full border p-3 hover:cursor-pointer hover:bg-red-600 active:bg-red-700" %>
    </div>

  <% end %>
  
  <div class="my-6">
    Have an account already? 
    <%= link_to "Log in", new_session_path(resource_name), class: "text-white underline underline-offset-4" %>
  </div>
</div>