<div id="people-navbar" data-controller="people-navbar" class="fixed p-2 right-0 w-[400px] h-[100vh] mx-2 rounded-md bg-red-50 drop-shadow-md overflow-scroll">
    <div class="flex p-2 h-[100px] items-center justify-around border-b border-slate-200">
        <%= link_to "All friends", "#", data: { action: "people-navbar#showAllFriends" }, class: "flex items-center px-2 py-1 rounded-md h-3/5 text-base hover:cursor-pointer hover:bg-red-200 active:bg-red-100" %>
        <%= link_to "Suggestions", "#", data: { action: "people-navbar#showSuggestedFriends" }, class: "flex items-center px-2 py-1 rounded-md h-3/5 text-base hover:cursor-pointer hover:bg-red-200 active:bg-red-100" %>
        <%= link_to "#", data: { action: "people-navbar#showFriendRequests" }, class: "flex flex-col justify-center px-2 py-1 rounded-md h-3/5 text-base hover:cursor-pointer hover:bg-red-200 active:bg-red-100" do %>
            <p>Friend Requests</p>
            <% if current_user.pending_invitations.any? %>
                <span class="text-sm text-red-500"><%= current_user.pending_invitations.count %> pending</span>
            <% end %>
        <% end %>
    </div>

    <div data-people-navbar-target="peopleRegion">
    </div>
    
    <div id="templates">
        <%= render "posts/people_region/templates" %>
    </div>
</div>