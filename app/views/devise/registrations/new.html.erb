<div id="registrations_new" class="flex flex-col mx-auto px-20 w-[850px] h-[700px]">
  <h2 class="block font-bold text-2xl tracking-tight py-6">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-red-200 grid grid-cols-2 grid-rows-5 w-full p-5 gap-5 items-end grow rounded-lg drop-shadow-2xl" }) do |f| %>
    
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "Johnny", class: "w-full devise_input_field" %>
    </div>
    
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true, placeholder: "Silverhand", class: "w-full devise_input_field" %>
    </div>

    <div class="field col-span-2">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "johnny.silverhand@arakasa.corp", class: "w-full devise_input_field" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class="block text-xl">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: " ", class: "w-full devise_input_field focus:devise_input_field"  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " ", class: "w-full devise_input_field"  %>
    </div>

    <div class="col-span-2">
        <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="actions col-span-2 self-center">
      <%= f.submit "Sign up", class: "bg-red-500 rounded-full w-full border-0 p-3 hover:cursor-pointer hover:bg-red-600 active:bg-red-700" %>
    </div>
  <% end %>
  
  <div class="p-6">
    <%= button_to user_github_omniauth_authorize_path, data: { turbo: false }, class: "flex items-center bg-zinc-800 text-white rounded-full w-full border-0 p-3 hover:cursor-pointer hover:bg-zinc-700 active:bg-zinc-600 justify-center" do %>
      Sign Up with GitHub
      <svg aria-hidden="true" class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path clip-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" fill-rule="evenodd"></path></svg>
    <% end %>
  </div>

  <div class="my-6">
    Have an account already? 
    <%= link_to "Log in", new_session_path(resource_name), class: "text-white underline underline-offset-4" %>
  </div>
</div>