<%= turbo_frame_tag "editable_section_post_#{@post.id}" do %>
    <%= render "post_header", post: @post %>
    
    <div>
        <%= form_with model: @post, html: { id: "edit-post" } do |form| %>
            <div class="bg-red-50 rounded-md">
                <%= form.text_area :body, class: "w-full resize-none rounded-md bg-red-50 focus:ring-0 p-3 border-0" %>
            </div>

            <div class="p-3">
                <%= form.label :image, "Upload image", class: "block mb-2 text-sm font-medium text-black" %>
                <%= form.file_field :image, class: "p-1 block w-full text-sm text-gray-900 border-0 rounded-lg cursor-pointer text-gray-400 focus:outline-none bg-red-100 placeholder-gray-400" %>
                <p class="mt-1 text-sm text-slate-800">PNG, JPG (MAX. 1MB).</p>
            </div>
        <% end %>
    </div>

    <%= render "likes/like_counter", likeable: @post %>

    <div class="flex border-t border-b border-slate-200 py-2 gap-2 text-base">
        <% if @post.author == current_user %>
            <%= button_tag form: "edit-post", class: "flex items-center self-center px-3 py-1 gap-2 rounded-full hover:bg-red-100 focus:bg-red-200" do %>
                Save
                <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>content-save-check-outline</title><path d="M14 12.8C13.5 12.31 12.78 12 12 12C10.34 12 9 13.34 9 15C9 16.31 9.84 17.41 11 17.82C11.07 15.67 12.27 13.8 14 12.8M11.09 19H5V5H16.17L19 7.83V12.35C19.75 12.61 20.42 13 21 13.54V7L17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H11.81C11.46 20.39 11.21 19.72 11.09 19M6 10H15V6H6V10M15.75 21L13 18L14.16 16.84L15.75 18.43L19.34 14.84L20.5 16.25L15.75 21" /></svg>
            <% end %>

            <%= link_to @post, class: "flex items-center self-center px-3 py-1 gap-2 rounded-full hover:bg-red-100 focus:bg-red-200" do %>
                Cancel
                <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><title>close-outline</title><path d="M3,16.74L7.76,12L3,7.26L7.26,3L12,7.76L16.74,3L21,7.26L16.24,12L21,16.74L16.74,21L12,16.24L7.26,21L3,16.74M12,13.41L16.74,18.16L18.16,16.74L13.41,12L18.16,7.26L16.74,5.84L12,10.59L7.26,5.84L5.84,7.26L10.59,12L5.84,16.74L7.26,18.16L12,13.41Z" /></svg>
            <% end %>
        <% end %>
    </div>
<% end %>